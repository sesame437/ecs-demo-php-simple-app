{
    "family": "ecssample",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "environment": [],
            "name": "ecs-sample",
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "cpu": 10,
            "memory": 500,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "my-vol",
                    "containerPath": "/var/www/my-vol"
                }
            ],
            "entryPoint": [
                "/usr/sbin/apache2",
                "-D",
                "FOREGROUND"
            ],
            "essential": true
        }
    ]
}
