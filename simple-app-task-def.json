{
    "family": "ecssample",
    "networkMode": "bridge",
    "containerDefinitions": [
        {
            "environment": [],
            "name": "ecssample",
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "cpu": 10,
            "memory": 500,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "entryPoint": [
                "/usr/sbin/apache2",
                "-D",
                "FOREGROUND"
            ],
            "essential": true
        }
    ]
}
